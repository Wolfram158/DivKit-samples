{
  "templates": {
    "title": {
      "type": "text",
      "font_size": 20,
      "line_height": 24,
      "font_weight": "bold",
      "paddings": {
        "left": 24,
        "right": 24,
        "bottom": 16
      }
    },
    "control_button": {
      "type": "image",
      "scale": "fit",
      "aspect": {
        "ratio": 1
      },
      "width": {
        "type": "fixed",
        "value": 44
      }
    }
  },
  "card": {
    "log_id": "sample_card",
    "variables": [
      {
        "name": "video_time",
        "type": "integer",
        "value": 0
      },
      {
        "name": "button_url",
        "type": "string",
        "value": "https://yastatic.net/s3/home/divkit/play_button.png"
      }
    ],
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "container",
          "orientation": "vertical",
          "margins": {
            "top": 24,
            "bottom": 24
          },
          "items": [
            {
              "type": "title",
              "text": "Video"
            },
            {
              "type": "video",
              "id": "video1",
              "video_sources": [
                {
                  "type": "video_source",
                  "url": "https://yastatic.net/s3/home/divkit/bears.mp4",
                  "mime_type": "video/mp4"
                },
                {
                  "type": "video_source",
                  "url": "http://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ElephantsDream.mp4",
                  "mime_type": "video/mp4"
                }
              ],
              "repeatable": false,
              "margins": {
                "bottom": 20,
                "top": 20
              },
              "autostart": false,
              "muted": true,
              "elapsed_time_variable": "video_time",
              "height": {
                "type": "fixed",
                "value": 280
              },
              "background": [
                {
                  "type": "solid",
                  "color": "#FFFFFF"
                }
              ]
            },
            {
              "type": "container",
              "orientation": "horizontal",
              "width": {
                "type": "match_parent"
              },
              "height": {
                "type": "wrap_content"
              },
              "content_alignment_horizontal": "center",
              "content_alignment_vertical": "center",
              "items": [
                {
                  "type": "control_button",
                  "image_url": "https://yastatic.net/s3/home/divkit/rewind_button.png",
                  "margins": {
                    "right": 20
                  },
                  "actions": [
                    {
                      "log_id": "rewind",
                      "url": "div-action://set_variable?name=video_time&value=0"
                    }
                  ]
                },
                {
                  "type": "control_button",
                  "image_url": "@{button_url}",
                  "margins": {
                    "right": 15
                  },
                  "paddings": {
                    "top": 3,
                    "bottom": 3
                  },
                  "actions": [
                    {
                      "log_id": "play",
                      "is_enabled": "@{button_url == 'https://yastatic.net/s3/home/divkit/play_button.png'}",
                      "url": "div-action://video?id=video1&action=start"
                    },
                    {
                      "log_id": "pause",
                      "is_enabled": "@{button_url == 'https://yastatic.net/s3/home/divkit/pause_button.png'}",
                      "url": "div-action://video?id=video1&action=pause"
                    },
                    {
                      "log_id": "make_play_button_gone",
                      "is_enabled": "@{button_url == 'https://yastatic.net/s3/home/divkit/play_button.png'}",
                      "url": "div-action://set_variable?name=button_url&value=https://yastatic.net/s3/home/divkit/pause_button.png"
                    },
                    {
                      "log_id": "make_pause_button_gone",
                      "is_enabled": "@{button_url == 'https://yastatic.net/s3/home/divkit/pause_button.png'}",
                      "url": "div-action://set_variable?name=button_url&value=https://yastatic.net/s3/home/divkit/play_button.png"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    ]
  }
}